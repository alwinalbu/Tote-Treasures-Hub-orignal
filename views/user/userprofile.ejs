<%- include('../partials/usernava') %>
<%- include('../partials/usercanvas') %>

    <div class="container">
    <h3 class="text-center mt-0"> Welcome <%=user.Username %></h3>
    <div class="row mt-3">
        <div class="col-lg-10 mx-auto">
            <div class="col-md-6 mx-auto">
                <div class="">
                    <label for="name">Name:</label>
                    <div class="input-group">
                        <input type="text" id="name" class="form-control" value="<%= user.Username %>" readonly>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="editNameBtn">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mx-auto">
                <div class="">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="form-control" value="<%= user.Email %>" readonly>
                </div>
            </div>
            <div class="col-md-6 mx-auto">
                <div class="">
                    <label for="password">Password:</label>
                    <input type="password" id="password" class="form-control" readonly>
                </div>
                <div class="">
                    <button class="btn btn-primary" type="button" id="changePasswordBtn">Change Password</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Edit Name Button Click Event
        $('#editNameBtn').click(function() {
            $('#name').prop('readonly', false); // Enable editing the name
        });

        // Change Password Button Click Event
        $('#changePasswordBtn').click(function() {
            // Simulated AJAX call
            $.ajax({
                url: '/changePassword', // Replace with your actual endpoint
                type: 'POST',
                data: { newPassword: 'newPassword123' }, // Data to be sent (in this case, the new password)
                success: function(response) {
                    // On success, update the UI or display a success message
                    alert('Password changed successfully');
                },
                error: function(xhr, status, error) {
                    // Handle error scenario
                    alert('Error: ' + error);
                }
            });
        });
    });
</script>
    

