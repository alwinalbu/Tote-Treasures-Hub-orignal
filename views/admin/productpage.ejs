<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Italianno' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/admin/productpage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


</head>

<body style="background-color: black;">
    <nav class="navbar navbar-expand-lg main-nav">
        <div class="container-fluid d-flex align-items-center">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <a class="navbar-brand d-flex justify-content-start" href="#">
                <img src="/images/logo.png" alt="Bootstrap" style="height: 70px; width: auto;">
            </a>
            <h1 class="header m-0">ToteTreasures Hub </h1>
            </h1>
            <div class="collapse navbar-collapse d-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-danger " href="/admin/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Offcanvas menu -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">ADMINS OPTIONS</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <ul class="list-group custom-list">
                <a href="/admin/dashboard" class="list-group-item custom-list-item">
                    <i class="fas fa-house me-2"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="list-group-item custom-list-item">
                    <i class="fas fa-bag-shopping me-2"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/order" class="list-group-item custom-list-item">
                    <i class="fas fa-cart-shopping me-2"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/userslist" class="list-group-item custom-list-item">
                    <i class="fas fa-users me-2"></i>
                    <span>Customers</span>
                </a>
                <a href="/admin/coupons" class="list-group-item custom-list-item">
                    <i class="fas fa-id-card me-2"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/banners" class="list-group-item custom-list-item">
                    <i class="fas fa-flag me-2"></i>
                    <span>Banners</span>
                </a>
                <a href="/admin/brandpage" class="list-group-item custom-list-item">
                    <i class="fas fa-user-plus me-2"></i>
                    <span>Brands</span>
                </a>
                <a href="/admin/Categorypage" class="list-group-item custom-list-item">
                    <i class="fas fa-list me-2"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/payments" class="list-group-item custom-list-item">
                    <i class="fas fa-money-bill me-2"></i>
                    <span>Payments</span>
                </a>
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center p-2">
            <div>
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-secondary me-2">Select Date</button>
                <button class="btn btn-primary me-2">Filter</button>
            </div>
            <a href="/admin/addProduct">
                <button class="btn btn-primary" id="addProduct">ADD Product</button>
            </a>
        </div>

        <table class="table table-bordered table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Serial No</th>
                    <th>Product Name</th>
                    <th>Brand Name</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Discount Amount</th>
                    <th>Available Quantity</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% products.forEach((product, index)=> { %>
                <% if (product.Display==='Active' ) { %>
                    <tbody>
                <% } else if (product.Display==='Inactive' ) { %>
                    <tbody class="table-dark">
                <% } %>
                        <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td><a href="/admin/viewproductdetails/<%=product._id%>" class="text-secondary">
                                        <%= product.ProductName %>
                                    </a></td>
                                <td>
                                    <%= product.BrandName.Name %>
                                </td>
                                <td>
                                    <%= product.Category.Name %>
                                </td>
                                <td>
                                    <img src="/uploads/<%= product.images[0] %>" alt="Product Image"
                                        style="max-width: 100px; height: auto;">
                                </td>
                                <td class="text-danger"><del>
                                        <%= product.Price %>
                                    </del></td>
                                <td class="text-success">
                                    <%= product.DiscountAmount %>
                                </td>
                                <td>
                                    <%= product.AvailableQuantity %>
                                </td>
                                <td>
                                    <% if (product.Display==='Active' ) { %>
                                        <p class="text-success fw-bold">
                                            <%= product.Display %>
                                        </p>
                                        <% } else if (product.Display==='Inactive' ) { %>
                                            <p class="text-danger fw-bold">
                                                <%= product.Display %>
                                            </p>
                                            <% } %>
                                </td>
                                <td>
                                    <% if (product.Display==='Active' ) { %>
                                        <a href="/admin/product/<%=product._id%>">
                                            <button
                                                onclick="return confirm(`Are you sure to block <%= product.ProductName %>??`)"
                                                class="btn btn-success">Block</button>
                                        </a>
                                        <% } else if (product.Display==='Inactive' ) { %>
                                            <a href="/admin/product/<%=product._id%>">
                                                <button
                                                    onclick="return confirm(`Are you sure. You are going to unblock the  <%= product.ProductName %>`)"
                                                    class="btn btn-danger">Unblock</button>
                                            </a>
                                            <% } %>
                                </td>
                        </tr>
                        <% }); %>
            </tbody>
        </table>
    </div>
    </div>


    <!-- Bootstrap JavaScript (place at the end of the body) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        var myOffcanvas = new bootstrap.Offcanvas(document.getElementById('staticBackdrop'));
    </script>
</body>

</html>