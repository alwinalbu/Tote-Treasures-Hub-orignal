<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HomePage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Italianno' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top main-nav">
        <div class="container-fluid d-flex align-items-center">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <a class="navbar-brand d-flex justify-content-start" href="#">
                <img src="/images/logo.png" alt="Bootstrap" style="height: 85px; width: auto;">
            </a>
            <h1 class="header m-0">Welcome, <%= adminName %>
            </h1>
            <div class="collapse navbar-collapse d-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-danger " href="/admin/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Offcanvas menu -->
    <div class="offcanvas offcanvas-start d-lg-block d-none" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">ADMINS OPTIONS</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <ul class="list-group custom-list">
                <a href="/admin/dashboard" class="list-group-item custom-list-item">
                    <i class="fas fa-house me-2"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="list-group-item custom-list-item">
                    <i class="fas fa-bag-shopping me-2"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/order" class="list-group-item custom-list-item">
                    <i class="fas fa-cart-shopping me-2"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/userslist" class="list-group-item custom-list-item">
                    <i class="fas fa-users me-2"></i>
                    <span>Customers</span>
                </a>
                <a href="/admin/coupons" class="list-group-item custom-list-item">
                    <i class="fas fa-id-card me-2"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/banners" class="list-group-item custom-list-item">
                    <i class="fas fa-flag me-2"></i>
                    <span>Banners</span>
                </a>
                <a href="/admin/brandpage" class="list-group-item custom-list-item">
                    <i class="fas fa-user-plus me-2"></i>
                    <span>Brands</span>
                </a>
                <a href="/admin/Categorypage" class="list-group-item custom-list-item">
                    <i class="fas fa-list me-2"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/payments" class="list-group-item custom-list-item">
                    <i class="fas fa-money-bill me-2"></i>
                    <span>Payments</span>
                </a>
            </ul>
        </div>
    </div>
    <div class="container mt-5 mt-lg-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="form-group d-flex">
                <div class="me-2">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button class="btn btn-secondary me-2">SEARCH USER</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-shadow mt-3" style="border: 2px solid gold;">
                <thead>
                    <tr>
                        <th>User Email</th>
                        <!-- <th> User ID</th> -->
                        <th>Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                          <td><%= user.Email %></td>
                          <!-- <td><%= user._id %></td> -->
                          <td><%= user.Username %></td>
                          <td>
                            <% if (user.Status === 'Active') { %>
                                <p class="text-success fw-bold"><%= user.Status %></p>
                                <% } else if (user.Status === 'Blocked') { %>
                                <p class="text-danger fw-bold"><%= user.Status %></p>    
                            <% } %>
                          </td>
                          <td>
                            <% if (user.Status === 'Active') { %>
                                <a href="/admin/userlist/<%=user._id%>"><button onclick="return confirm('Are you sure you want to  block the user')" class="btn btn-success " >Block</button></a>
                            <% } else if (user.Status === 'Blocked') { %>
                                <a href="/admin/userlist/<%=user._id%>"><button onclick="return confirm('Are you sure you want to  unblock the user')" class="btn btn-danger">Unblock</button></a>
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Bootstrap JavaScript (place at the end of the body) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

        <script>
            var myOffcanvas = new bootstrap.Offcanvas(document.getElementById('staticBackdrop'));
        </script>
</body>

</html>
